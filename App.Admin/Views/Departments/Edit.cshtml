@model Department

@{
    ViewData["Title"] = "Edit Department";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Departments" asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label for="Name" class="form-label">Department Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea id="Description" name="Description" class="form-control" rows="5" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Image</label>
                    <input type="file" id="Image" name="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@

    <link rel="stylesheet" href="~/App.Web.Mvc.styles.css" asp-append-version="true" />

    <link href="~/hospitaltemplate/plugins/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <link href="~/hospitaltemplate/plugins/icofont/icofont.css" rel="stylesheet" />

    <link href="~/hospitaltemplate/plugins/icofont/icofont.min.css" rel="stylesheet" />

    <link href="~/hospitaltemplate/plugins/slick-carousel/slick/slick.css" rel="stylesheet" />

    <link href="~/hospitaltemplate/plugins/slick-carousel/slick/slick-theme.css" rel="stylesheet" />


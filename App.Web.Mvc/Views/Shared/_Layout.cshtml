@*     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@

</head>
<body id="top">
    <header>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <partial name="_Topbar" />
        <partial name="_Header" />

    </header>
    @* <div class="container-fluid">*@
    @*<main role="main" class="pb-3">*@

    @Html.Raw(TempData["Message"]) @*Html.Raw(<İçerik>) = Dilediğimiz Html ogesini şekilli ve efektli haliyle görmemizi sağlar. *@
    @RenderBody()
    @*</main>*@
    @*  </div>*@
    @*Bu manevra bize 51 yıla mal olacak...*@
    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/hospitaltemplate/plugins/jquery/jquery.js" defer></script>
    <script src="~/hospitaltemplate/plugins/bootstrap/bootstrap.min.js" defer></script>
    <script src="~/hospitaltemplate/plugins/slick-carousel/slick/slick.min.js" defer></script>
    <script src="~/hospitaltemplate/plugins/slick-carousel/slick/slick.js" defer></script>
    <script src="~/hospitaltemplate/plugins/shuffle/shuffle.min.js" defer></script>
    <script src="~/hospitaltemplate/plugins/google-map/gmap.js" defer></script>


@model ContactViewModel

<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white">Contact Us</span>
                    <h1 class="text-capitalize mb-5 text-lg">Get in Touch</h1>

                    <!-- <ul class="list-inline breadcumb-nav">
                      <li class="list-inline-item"><a href="index.html" class="text-white">Home</a></li>
                      <li class="list-inline-item"><span class="text-white">/</span></li>
                      <li class="list-inline-item"><a href="#" class="text-white-50">Contact Us</a></li>
                    </ul> -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- contact form start -->

<section class="section contact-info pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="contact-block mb-4 mb-lg-0">
                    <i class="icofont-live-support"></i>
                    <h5>Call Us</h5>
                    @Model.Setting?.Phone
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="contact-block mb-4 mb-lg-0">
                    <i class="icofont-support-faq"></i>
                    <h5>Email Us</h5>
                    @Model.Setting?.Email
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="contact-block mb-4 mb-lg-0">
                    <i class="icofont-location-pin"></i>
                    <h5>Location</h5>
                    @Model.Setting?.Address
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-form-wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h2 class="text-md mb-2">Contact us</h2>
                    <div class="divider mx-auto my-4"></div>
                    <p class="mb-5">
                        Send Us A Message
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form id="contact-form" class="contact__form " method="post" asp-controller="Contact" asp-action="Create">
                    <!-- form message -->
                   

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Contact.FullName" class="form-label">Full Name</label>
                                <input type="text" id="contactFullName" placeholder="Hospital Example" name="contactFullName" class="form-control" />
                                <span asp-validation-for="Contact.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Contact.Email" class="form-label">Email</label>
                                <input type="email" id="Email" name="Email" placeholder="example@hospital.com" class="form-control" />
                                <span asp-validation-for="Contact.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Contact.Title" class="form-label">Title</label>
                                <input type="text" id="Title" name="Title" placeholder="Whats About" class="form-control" />
                                <span asp-validation-for="Contact.Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Contact.Phone" class="form-label">Phone</label>
                                <input type="text" id="Phone" placeholder="+90 5434321536" name="Phone" class="form-control" />
                                <span asp-validation-for="Contact.Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group-2 mb-4">
                        <label asp-for="Contact.Message" class="form-label">Message</label>
                        <textarea id="Message" name="Message" placeholder="Your Message is here..." class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Contact.Message" class="text-danger"></span>
                    </div>

                    <div>
                        <button class="btn btn-main btn-round-full" name="submit" type="submit">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


